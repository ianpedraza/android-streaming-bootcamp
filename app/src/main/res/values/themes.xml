<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Streamingbootcamp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomPlayer.Button.Setting" parent="ExoStyledControls.Button.Bottom.Settings">
        <item name="android:src">@drawable/ic_outline_settings</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="CustomPlayer.TimeText.Separator" parent="ExoStyledControls.TimeText.Separator">
        <item name="android:text">/</item>
    </style>

    <style name="CustomPlayer.Button.Center.Previous" parent="ExoStyledControls.Button.Center.Previous">
        <item name="android:layout_width">@dimen/custom_button_center_size</item>
        <item name="android:layout_height">@dimen/custom_button_center_size</item>
        <item name="android:background">@drawable/custom_player_buttons_background</item>
        <item name="android:padding">@dimen/custom_button_center_padding</item>
        <item name="android:layout_marginEnd">@dimen/custom_button_center_margin</item>
    </style>

    <style name="CustomPlayer.Button.Center.Next" parent="ExoStyledControls.Button.Center.Next">
        <item name="android:layout_width">@dimen/custom_button_center_size</item>
        <item name="android:layout_height">@dimen/custom_button_center_size</item>
        <item name="android:background">@drawable/custom_player_buttons_background</item>
        <item name="android:padding">@dimen/custom_button_center_padding</item>
        <item name="android:layout_marginStart">@dimen/custom_button_center_margin</item>
    </style>

    <style name="CustomPlayer.Button.Center.PlayPause" parent="ExoStyledControls.Button.Center.PlayPause">
        <item name="android:background">@drawable/custom_player_buttons_background</item>
        <item name="android:padding">@dimen/custom_button_center_padding</item>
    </style>

    <style name="TitleBox.Box" parent="">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="TitleBox.Arrow" parent="">
        <item name="tint">@android:color/black</item>
    </style>

</resources>
